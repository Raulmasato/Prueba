@{
    ViewData["Title"] = "Inicio";
}

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Bienvenido a SportAdmin</h1>
        <p class="lead mb-4">Sistema de gestión para artículos deportivos</p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="SportsArticles" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-box-seam"></i> Ver Inventario
            </a>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="SportsArticles" asp-action="Create" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle"></i> Nuevo Artículo
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                </a>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-4">
        <!-- Tarjeta de Estadísticas -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-speedometer2"></i> Resumen</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-box-seam text-primary fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Artículos Totales</h6>
                            <p class="fs-3 fw-bold mb-0">@(ViewBag.TotalArticles ?? "0")</p>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Disponibles</h6>
                            <p class="fs-3 fw-bold mb-0">@(ViewBag.AvailableStock ?? "0")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Acciones Rápidas -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Acciones Rápidas</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <a asp-controller="SportsArticles" asp-action="Index" class="btn btn-outline-primary mb-3 text-start">
                        <i class="bi bi-list-ul"></i> Ver todos los artículos
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="SportsArticles" asp-action="Create" class="btn btn-outline-success mb-3 text-start">
                            <i class="bi bi-plus-circle"></i> Agregar nuevo artículo
                        </a>
                        <a href="#" class="btn btn-outline-warning text-start">
                            <i class="bi bi-file-earmark-bar-graph"></i> Generar reporte
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary mb-3 text-start">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión para más opciones
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Tarjeta de Últimos Movimientos -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recientes</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentArticles != null)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in ViewBag.RecentArticles)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@item.Nombre</span>
                                    <span class="badge bg-primary rounded-pill">@item.Stock</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-info-circle fs-4 text-muted"></i>
                            <p class="mb-0">No hay artículos recientes</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .card {
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }
    </style>
}